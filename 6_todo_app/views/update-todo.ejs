<%- include("partials/header.ejs") %>
<div class="table-container">
  <h2 class="todo-title">Update todo</h2>
  <div>
    <a class="btn" href="/">Back</a>
  </div>

  <form action="/update-todo/<%= todo.id %>" method="POST">
    <div class="new-todo">
      <div class="form-group">
        <label class="text-light">Title</label>
        <input type="text" name="title" value="<%= todo.title %>" placeholder="Type todo here" />
      </div>

      <div class="form-group">
        <label class="text-light">Description</label>
        <input
          type="text"
          name="desc"
          value="<%= todo.desc %>"
          placeholder="Type description here"
        />
      </div>

      <div class="form-group">
        <button class="btn" type="submit">save</button>
      </div>
    </div>
  </form>
</div>
<%- include("partials/footer.ejs") %>
